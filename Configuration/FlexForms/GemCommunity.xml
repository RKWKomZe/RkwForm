<T3DataStructure>
    <sheets>
        <global>
            <ROOT>
                <TCEforms>
                    <sheetTitle>LLL:EXT:rkw_form/Resources/Private/Language/locallang_db.xlf:flexform.standard.global</sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>
                    <settings.verification.validUntil>
                        <TCEforms>
                            <label>LLL:EXT:rkw_form/Resources/Private/Language/locallang_db.xlf:flexform.standard.verification.validUntil</label>
                            <config>
                                <type>input</type>
                                <size>50</size>
                                <max>50</max>
                                <eval>trim</eval>
                                <eval>required</eval>
                            </config>
                        </TCEforms>
                    </settings.verification.validUntil>
                    <settings.form.topics>
                        <TCEforms>
                            <label>LLL:EXT:rkw_form/Resources/Private/Language/locallang_db.xlf:flexform.standard.topics</label>
                            <config>
                                <type>text</type>
                                <cols>24</cols>
                                <rows>3</rows>
                                <eval>required</eval>
                            </config>
                        </TCEforms>
                    </settings.form.topics>
                    <settings.privacyPid>
                        <TCEforms>
                            <label>LLL:EXT:rkw_form/Resources/Private/Language/locallang_db.xlf:flexform.standard.privacyPage</label>
                            <config>
                                <type>group</type>
                                <internal_type>db</internal_type>
                                <allowed>pages</allowed>
                                <size>2</size>
                                <maxitems>1</maxitems>
                                <minitems>0</minitems>
                                <show_thumbs>1</show_thumbs>
                            </config>
                        </TCEforms>
                    </settings.privacyPid>
                    <settings.revocationEmail>
                        <TCEforms>
                            <label>LLL:EXT:rkw_form/Resources/Private/Language/locallang_db.xlf:flexform.standard.revocationEmail</label>
                            <config>
                                <type>input</type>
                                <size>50</size>
                                <max>50</max>
                                <eval>trim</eval>
                                <eval>required</eval>
                                <eval>email</eval>
                            </config>
                        </TCEforms>
                    </settings.revocationEmail>
                </el>
            </ROOT>
        </global>

        <admin>
            <ROOT>
                <TCEforms>
                    <sheetTitle>LLL:EXT:rkw_form/Resources/Private/Language/locallang_db.xlf:flexform.standard.admin</sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>
                    <settings.mail.backendUser>
                        <TCEforms>
                            <label>LLL:EXT:rkw_form/Resources/Private/Language/locallang_db.xlf:flexform.standard.admin.beuser</label>
                            <config>
                                <type>select</type>
                                <size>10</size>
                                <minitems>0</minitems>
                                <maxitems>99</maxitems>
                                <multiple>1</multiple>
                                <foreign_table>be_users</foreign_table>
                                <foreign_table_where> AND be_users.deleted = 0 AND be_users.email != '' ORDER BY be_users.username</foreign_table_where>
                            </config>
                        </TCEforms>
                    </settings.mail.backendUser>
                </el>
            </ROOT>
        </admin>

        <confirmtext>
            <ROOT>
                <TCEforms>
                    <sheetTitle>LLL:EXT:rkw_form/Resources/Private/Language/locallang_db.xlf:flexform.standard.confirmtext</sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>
                    <settings.confirmtext.headline>
                        <label>LLL:EXT:rkw_form/Resources/Private/Language/locallang_db.xlf:flexform.standard.confirmtext.headline</label>
                        <config>
                            <type>input</type>
                            <cols>24</cols>
                            <rows>3</rows>
                        </config>
                    </settings.confirmtext.headline>
                    <settings.confirmtext.description>
                        <label>LLL:EXT:rkw_form/Resources/Private/Language/locallang_db.xlf:flexform.standard.confirmtext.description</label>
                        <config>
                            <type>text</type>
                            <cols>24</cols>
                            <rows>3</rows>
                        </config>
                    </settings.confirmtext.description>
                </el>
            </ROOT>
        </confirmtext>
    </sheets>
</T3DataStructure>
